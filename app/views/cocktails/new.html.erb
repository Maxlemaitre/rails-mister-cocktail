<div class="container">
  <div class="row">
    <h1 class='title text-center'>Create a new Cocktail</h1>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, class:"navbar-wagon-button btn validate" %>
    <% end %>
  </div>
</div>

