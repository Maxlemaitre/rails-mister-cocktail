<div class="text-center">
  <div class="banner"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path @cocktail.photo , height: 600, width: 1200, crop: :fill %>')">
  <div class="banner-content">
     <h1 class="title"><%= @cocktail.name %></h1>
  </div>
</div>

<h3>Ingredients</h3>
  <ul class="list-unstyled"><% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> : <%= dose.ingredient.name %>  <%= link_to "", dose_path(dose), method: :delete, class:"fa fa-trash trash-style" %> </li>
  <% end %> </ul>
  <div class="marged">
    <p>
      <%= link_to "Create a dose", new_cocktail_dose_path(@cocktail), class:"navbar-wagon-button btn validate" %>
    </p>
  </div>
</div>
