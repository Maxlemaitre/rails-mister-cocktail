<div class="container">
  <div class="row">
    <h1 class="text-center title">Create a new dose for <%= @cocktail.name %></h1>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.input :ingredient_id, collection: Ingredient.all %>
      <%= f.button :submit, class:"navbar-wagon-button btn validate"%>
    <% end %>
  </div>
</div>
